---
import Form from '~/components/ui/Form.astro';

const inputs = [
  { name: 'name', label: 'Nombre', type: 'name', placeholder: 'Tu nombre completo' },
  { name: 'email', label: 'Correo electrónico', type: 'email', placeholder: 'tu@correo.com' },
];

const textarea = {
  label: 'Mensaje',
  placeholder: 'Escribe tu mensaje aquí...',
  rows: 5,
};

const disclaimer = {
  label: 'He leído y acepto la política de privacidad.',
};
---

<section
  id="contact"
  class="contact-section pt-10 pb-10 scroll-mt-20 relative bg-cover bg-center"
  style="background-image: url('https://res.cloudinary.com/dpofrsdix/image/upload/v1760769172/Landing-Carousel-2_keuciz.jpg');"
>
  <!-- Overlay oscuro -->
  <div class="absolute inset-0 bg-black/70"></div>

  <div class="container mx-auto max-w-3xl text-center relative z-10">
    <h2 class="text-2xl font-bold mb-2 text-white">Contáctanos</h2>
    <p class="text-sm mb-5 text-gray-200">Déjanos un mensaje y te responderemos pronto.</p>

    <div
      class="flex flex-col text-start max-w-xl mx-auto rounded-lg border shadow p-4 sm:p-6 lg:p-8 w-full border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 relative"
    >
      <Form inputs={inputs} textarea={textarea} disclaimer={disclaimer} button="Enviar mensaje" description="" />
    </div>
  </div>
</section>
<style>
  .contact-section::before,
  .contact-section::after {
    content: '';
    position: absolute;
    left: 0;
    width: 100%;
    height: 100px;
    z-index: 1;
    pointer-events: none;
  }
  .contact-section::before {
    top: 0;
    background: linear-gradient(to bottom, rgba(10, 10, 20, 0.9), rgba(10, 10, 20, 0));
  }
  .contact-section::after {
    bottom: 0;
    background: linear-gradient(to top, rgba(10, 10, 20, 0.9), rgba(10, 10, 20, 0));
  }
</style>
