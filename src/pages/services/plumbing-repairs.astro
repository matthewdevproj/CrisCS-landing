---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Plumbing Repairs & Services - CRIS Construction Services',
  description:
    'Professional plumbing repair, installation, and maintenance services. Emergency plumbing, drain cleaning, pipe replacement, and fixture installation for homes and businesses.',
};

const plumbingServices = [
  {
    title: 'Emergency Plumbing',
    description:
      '24/7 emergency plumbing services for leaks, bursts, and urgent repairs.',
    highlights: ['Rapid response', 'Temporary solutions', 'Permanent repairs'],
    image: 'https://images.unsplash.com/photo-1628084599792-b43537a840c3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Drain Cleaning',
    description:
      'Professional drain and sewer line cleaning, snaking, and hydro-jetting.',
    highlights: ['Clog removal', 'Preventive maintenance', 'Camera inspection'],
    image: 'https://images.unsplash.com/photo-1621905252507-b35492cc74b4?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Pipe Repair & Replacement',
    description: 'Expert pipe repair, replacement, and re-piping services.',
    highlights: ['Leak detection', 'Pipe material expertise', 'Code compliance'],
    image: 'https://images.unsplash.com/photo-1581093458791-8a6c6bc34fb1?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Fixture Installation',
    description: 'Professional installation of sinks, toilets, faucets, and showers.',
    highlights: ['Proper sealing', 'Water efficiency', 'Aesthetic placement'],
    image: 'https://images.unsplash.com/photo-1584622650111-993a426fbf0a?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Water Heater Services',
    description: 'Water heater installation, repair, and maintenance.',
    highlights: ['Tank & tankless options', 'Energy efficiency', 'Safety checks'],
    image: 'https://images.unsplash.com/photo-1600607687939-ce8a6c25118c?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Preventive Maintenance',
    description: 'Regular plumbing inspections and preventive care.',
    highlights: ['System assessment', 'Early problem detection', 'Cost savings'],
    image: 'https://images.unsplash.com/photo-1600607687644-aac4c3eac7f4?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
];

const plumbingBenefits = [
  {
    title: '24/7 Emergency',
    description: 'Round-the-clock service for urgent plumbing issues.',
    icon: 'tabler:alert-triangle'
  },
  {
    title: 'Licensed Professionals',
    description: 'Fully licensed and insured plumbing technicians.',
    icon: 'tabler:license'
  },
  {
    title: 'Modern Equipment',
    description: 'State-of-the-art tools for efficient and precise work.',
    icon: 'tabler:tools'
  },
  {
    title: 'Warranty Protection',
    description: 'Guaranteed workmanship and parts warranty.',
    icon: 'tabler:shield-check'
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Reliable Water Solutions"
    title="Professional <span class='text-gray-800 dark:text-gray-200'>Plumbing Services</span>"
    subtitle="Expert plumbing repair, installation, and maintenance services. From emergency leaks to routine maintenance, we provide reliable solutions to keep your water systems flowing smoothly."
    actions={[
      {
        variant: 'primary',
        text: 'Get Plumbing Help',
        href: '#services',
        icon: 'tabler:arrow-down',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1628084599792-b43537a840c3?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80',
      alt: 'Professional plumber working on pipes',
    }}
  />

  <!-- Plumbing Services Section -->
  <CallToAction
    id="services"
    title="Comprehensive Plumbing Services"
    subtitle="Professional plumbing solutions for every need:"
    services={plumbingServices}
    actions={[
      {
        variant: 'secondary',
        text: 'Schedule Service',
        href: '#contact',
        icon: 'tabler:calendar',
      },
      {
        variant: 'secondary',
        text: 'Emergency Repair',
        href: 'https://api.whatsapp.com/send/?phone=15712159461&text=Emergency+plumbing+repair+needed%2C+please+contact+me+immediately&type=phone_number&app_absent=0',
        icon: 'tabler:alert-triangle',
      },
    ]}
  />

  <!-- Plumbing Benefits Section -->
  <Content
    isAfterContent
    isReversed
    items={plumbingBenefits}
    image={{
      src: 'https://images.unsplash.com/photo-1621905252507-b35492cc74b4?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80',
      alt: 'Modern plumbing tools and equipment',
    }}
  >
    <Fragment slot="content">
      <div class="space-y-6">
        <h3 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">
          Why Choose Professional Plumbing?
        </h3>
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          Professional plumbing services ensure your water systems operate safely and efficiently. 
          From preventing water damage to improving water quality, expert plumbing care protects 
          your property and provides peace of mind.
        </p>
      </div>
    </Fragment>
  </Content>

  <!-- Why Choose Us Section -->
  <Content
    items={[
      {
        title: 'Expert Diagnosis',
        description: 'Accurate problem identification and effective solutions.',
        icon: 'tabler:microscope',
      },
      {
        title: 'Quality Materials',
        description: 'Durable pipes, fixtures, and components that last.',
        icon: 'tabler:components',
      },
      {
        title: 'Code Compliance',
        description: 'All work meets local plumbing codes and standards.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Clean Work',
        description: 'Minimal mess and thorough cleanup after service.',
        icon: 'tabler:sparkles',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1581093458791-8a6c6bc34fb1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80',
      alt: 'Plumber demonstrating quality workmanship',
    }}
  >
    <Fragment slot="content">
      <div class="space-y-6">
        <h3 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">
          Why Choose Our Plumbing Services?
        </h3>
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          Our licensed plumbers combine technical expertise with quality craftsmanship to deliver 
          reliable plumbing solutions. We prioritize your safety and satisfaction while ensuring 
          long-lasting results for your plumbing systems.
        </p>
      </div>
    </Fragment>
  </Content>

  <!-- Final CTA Section -->
  <CallToAction
    id="contact"
    title="Need Plumbing Help?"
    subtitle="Contact us for immediate plumbing assistance or schedule preventive maintenance. We're here to keep your water systems running smoothly."
    actions={[
      {
        variant: 'secondary',
        text: 'Get Free Estimate',
        href: 'https://api.whatsapp.com/send/?phone=15712159461&text=Hello%2C+I+would+like+a+free+plumbing+estimate&type=phone_number&app_absent=0',
        icon: 'tabler:calculator',
      },
      {
        variant: 'secondary',
        text: 'Emergency Call',
        href: 'tel:+15712159461',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'Schedule Maintenance',
        href: '#services',
        icon: 'tabler:calendar',
      },
    ]}
  />
</Layout>