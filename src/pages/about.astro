        class="absolute z-30 flex items-center justify-center -translate-x-1/2 bottom-5 left-1/2 px-4 py-2 space-x-3 bg-gray-800/50 rounded-lg shadow-md backdrop-blur-sm rtl:space-x-reverse"
      >
        <!-- Background "slots" for indicator positions -->
        <div class="absolute inset-0 flex items-center justify-center space-x-3">
          <div class="w-3 h-3 bg-gray-400/30 rounded-full"></div>
          <div class="w-3 h-3 bg-gray-400/30 rounded-full"></div>
