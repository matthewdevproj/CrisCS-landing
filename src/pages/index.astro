---
import Layout from '~/layouts/PageLayout.astro';

import Hero3 from '~/components/widgets/Hero3.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import BrandsPersonalizadas from '~/components/widgets/BrandsPersonalizadas.astro';
import Statspersonalizadas from '~/components/widgets/Statspersonalizadas.astro';
import NotePersonalizada from '~/components/widgets/NotePersonalizada.astro';
import ContactForm from '~/components/widgets/ContactForm.astro';

const metadata = {
  title: 'CRIS Construction Services',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- 🦺 Hero Section -->
  <Hero3>
    <Fragment slot="title">
      DISCOVER OUR <span class="hidden xl:inline-block">PREMIUM</span>
      <span class="text-slate-300 font-black"> CONSTRUCTION SERVICES</span> AND
      <span class="text-slate-300 font-black"> EXPERT SOLUTIONS</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-lg md:text-xl lg:text-2xl text-slate-400 leading-relaxed">
        <span class="font-bold text-slate-200">At CRIS Construction Services</span>, we specialize in comprehensive
        repairs, renovations, and complete maintenance for both residential and commercial properties. Our commitment is
        to deliver <span class="font-semibold text-slate-300">reliable, efficient, and lasting results</span> that exceed
        your expectations.
      </span>
    </Fragment>
  </Hero3>

  <!-- 🧱 Note Section -->
  <NotePersonalizada
    title="CRIS Construction Services"
    description="Get in touch with our team of specialists in repairs, remodeling, and general maintenance. We deliver trusted, high-quality solutions that make your spaces safer and more beautiful."
  />

  <!-- ⚙️ Services Section -->
  <Features2
    title="OUR GENERAL SERVICES"
    id="services"
    subtitle="We provide complete solutions for maintenance, remodeling, and construction — combining skilled craftsmanship with durable materials."
    columns={3}
    items={[
      {
        title: 'Drainpipe and Plumbing Repairs',
        description:
          'We fix leaks, clogs, and water or drain line issues. Fast, reliable, and guaranteed service for your peace of mind.',
        icon: 'tabler:tools',
      },
      {
        title: 'Bathroom and Kitchen Remodeling',
        description:
          'We design and renovate modern, functional spaces with durable finishes and professional workmanship.',
        icon: 'tabler:bath',
      },
      {
        title: 'Ceramic and Wood Flooring',
        description:
          'Installation of ceramic, laminate, or hardwood floors with precision and expert material guidance.',
        icon: 'tabler:layout-grid',
      },
      {
        title: 'Interior and Exterior Painting',
        description:
          'We refresh your spaces with professional-grade painting, ensuring clean finishes and long-lasting color.',
        icon: 'tabler:paint',
      },
      {
        title: 'Concrete and Wood Work',
        description:
          'We build and repair patios, fences, floors, and structures using concrete or wood, combining durability and style.',
        icon: 'tabler:building',
      },
      {
        title: 'General Maintenance',
        description:
          'Comprehensive maintenance for homes, offices, and businesses — plumbing, electrical, carpentry, and more.',
        icon: 'tabler:hammer',
      },
      {
        title: 'Custom Projects',
        description: 'From small repairs to full renovations or expansions — we adapt to your needs and budget.',
        icon: 'tabler:ruler',
      },
    ]}
  />

  <!-- 🧰 Blog Section -->
  <BlogLatestPosts
    title="Tips & Updates"
    information={`Discover practical maintenance tips, home renovation ideas, and expert advice to keep your property in top shape.`}
  />

  <!-- 📊 Stats Section -->
  <Statspersonalizadas class="bg-slate-900 text-gray-100" />

  <!-- ❓ FAQs Section -->
  <Features
    id="FAQS"
    tagline="FAQs"
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about our services, timelines, and coverage areas."
    items={[
      {
        title: 'What services does CRIS Construction Services offer?',
        description:
          'We handle plumbing repairs, renovations, flooring, painting, concrete work, woodwork, and full maintenance services.',
        icon: 'tabler:info-circle',
      },
      {
        title: 'Do you work with homes and businesses?',
        description:
          'Yes, we provide services for residential properties, offices, and commercial spaces of all sizes.',
        icon: 'tabler:building-store',
      },
      {
        title: 'Do you provide free estimates?',
        description: 'Absolutely! Contact us and we’ll provide a no-obligation quote tailored to your project.',
        icon: 'tabler:calculator',
      },
      {
        title: 'What areas do you serve?',
        description:
          'We serve the local area and nearby regions. Message us to confirm service availability in your zone.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'How can I contact you?',
        description: 'Call or text us at +1 (571) 215-9461. We’re also available via WhatsApp for quick communication.',
        icon: 'tabler:phone',
      },
      {
        title: 'Do you include materials in your service?',
        description: 'Yes, we can handle both materials and labor, or work with materials you provide — your choice.',
        icon: 'tabler:package',
      },
    ]}
  />

  <!-- 🧱 Clients Section -->
  <BrandsPersonalizadas
    title="Clients Who Trust Us"
    subtitle="Homeowners and businesses who have chosen CRIS Construction Services to enhance and renew their spaces."
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Exterior Painting Project',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Floor Renovation Project',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Concrete Repair Project',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Concrete Repair Project',
      },
    ]}
  />

  <!-- 💬 Contact Section -->
  <ContactForm
    title="Contact Our Team"
    subtitle="Let’s talk about your next project — we’re ready to bring your ideas to life."
  >
    actions={
      [
        {
          variant: 'primary',
          text: 'Contact Us on WhatsApp',
          href: 'https://wa.me/15712159461',
          target: '_blank',
          icon: 'tabler:brand-whatsapp',
        },
      ]
    }
  </ContactForm>
</Layout>
